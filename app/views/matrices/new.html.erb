<!-- Page Content -->
<div class="container">
  <div class="col-lg-12 text-center">
    <h1 class="mt-5">Competency Matrix</h1>
    <p class="lead">Track your competencies so you can improve them!</p>
  </div>

  <ul class="nav nav-tabs justify-content-end border-light border-bottom-0" id="myTab" role="tablist">
    <% @matrices.each do |matrix| %>
      <li class="nav-item">
        <a class="nav-link active"
           id="<%= matrix.title %>-tab"
           data-toggle="tab"
           href="#<%= matrix.title %>"
           role="tab"
           aria-controls="<%= matrix.title %>"
           aria-expanded="true">
           <%= matrix.title %>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile">Ruby</a>
      </li>
    <% end %>
  </ul>

  <div class="tab-content p-4 border" id="myTabContent">
    <% @matrices.each do |matrix| %>
      <div class="tab-pane fade show active" id="<%= matrix.title %>" role="tabpanel" aria-labelledby="<%= matrix.title %>-tab">
        <div class="col-lg-12 mx-auto">
          <table class="table">
            <h3 class="text-center mb-4"><%= matrix.title %></h2>
            <thead class="thead-default">
              <tr>
                <% matrix.headers.each do |header| %>
                  <th><%= header %></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% matrix.competencies.each do |competency| %>
                <tr>
                  <th scope="row"><%= competency.title %></th>
                  <% competency.levels.each do |level| %>
                    <td class="competency" onclick="selectCompetency(event)">
                      <%= level %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
